---
import { twMerge } from 'tailwind-merge';
import clsx from 'clsx';

interface Props {
  as?: string;
  href?: string;
  className?: string;
}

const { as: Component, href, ...props } = Astro.props;

const cls = twMerge(
  clsx({
    'text-4xl border-b-2 border-accent/50 mt-12 mb-4 pb-1 first:mt-4': Component === 'h1',
    'text-3xl border-b-2 border-accent/50 mt-12 mb-4 pb-1 first:mt-4': Component === 'h2',
    'text-2xl border-b border-accent/50 mt-10 mb-3 pb-1': Component === 'h3',
    'text-xl  border-b border-accent/50 mt-10 mb-3 pb-1': Component === 'h4',
    'text-lg my-2': Component === 'h5',
    'text-base my-1': Component === 'h6',
  }),
);
const id = href.replace('#', '');
---

<Component class={cls} id={id} {...props}>
  <a href={href}><slot /></a>
</Component>
